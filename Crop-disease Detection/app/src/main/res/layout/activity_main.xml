<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ShowResult">

    <RelativeLayout android:layout_width="wrap_content"
        android:background="#000"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_capture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/text_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:layout_below="@id/iv_capture"
        android:textAlignment="center"
        android:id="@+id/disease_name_title"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Disease" />

    <TextView
        android:id="@+id/disease_name"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:layout_below="@id/disease_name_title"
        android:layout_weight="1"
        android:background="@drawable/text_border"
        android:text="TextView"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_below="@id/disease_name"
        android:textAlignment="center"
        android:id="@+id/produce_title"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Produce" />

    <TextView
        android:id="@+id/produce"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/produce_title"
        android:layout_weight="1"
        android:textSize="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/text_border"
        android:text="TextView"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_below="@id/produce"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/def_cause_title"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Definition And Causes" />

    <TextView
        android:id="@+id/def_cause"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:background="@drawable/text_border"
        android:layout_below="@id/def_cause_title"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="TextView"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_below="@id/def_cause"
        android:textAlignment="center"
        android:id="@+id/solution_title"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Solutions" />

    <TextView
        android:id="@+id/solution"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/text_border"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/solution_title"
        android:layout_weight="1"
        android:text="TextView"
        />

        <TextView
            android:layout_below="@id/solution"
            android:textAlignment="center"
            android:id="@+id/probabilities_title"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Probabilities" />

        <TextView
            android:id="@+id/probability"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/text_border"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/probabilities_title"
            android:layout_weight="1"
            android:text="TextView"
            />

</RelativeLayout>
</ScrollView>